@page

@using Blog.Application.Posts.Models;
@model Admin.Blog.Pages.Admin.Posts.NewModel
@{
    ViewData["Title"] = "New Post";
}
<form class="form-material" method="post">
    <div class="row">
        <div class="col-lg-12 col-xl-9">
            <div class="card">
                <div class="card-header">
                    <h5><i class="icofont icofont-document-search m-r-5"></i>@Localizer["SEO Metadata"]</h5>
                </div>
                <div class="card-block">
                    <div class="material-group">
                        <div class="material-addone">
                            <i class="icofont icofont-all-caps"></i>
                        </div>
                        <div class="form-group form-primary">
                            <input asp-for="PostDetail.Title" class="form-control" />
                            <span class="form-bar"></span>
                            <label class="float-label">@Localizer["Title"]</label>
                        </div>
                    </div>
                    <div class="material-group">
                        <div class="material-addone">
                            <i class="icofont icofont-link-alt"></i>
                        </div>
                        <div class="form-group form-primary">
                            <input asp-for="PostDetail.Slug" class="form-control" />
                            <span class="form-bar"></span>
                            <label class="float-label">@Localizer["Slug"]</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5><i class="icofont icofont-edit m-r-5"></i>@Localizer["Content"]</h5>
                </div>
                <div class="card-block">
                    <div class="form-group">
                        <textarea asp-for="PostDetail.Content"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-xl-3">
            <div class="card">
                <div class="card-header">
                    <h5>@Localizer["Publish"]</h5>
                </div>
                <div class="card-block">
                    <div class="material-group">
                        <div class="material-addone">
                            <i class="ti-eye"></i>
                        </div>
                        <div class="form-group form-primary form-static-label form-static-label-black">
                            <select asp-for="PostDetail.Status" asp-items="Html.GetEnumSelectList<PostStatus>()" class="form-control"></select>
                            <span class="form-bar"></span>
                            <label class="float-label">@Localizer["Status"]</label>
                        </div>
                    </div>
                    <div class="material-group">
                        <div class="material-addone">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <div class="form-group form-primary form-static-label form-static-label-black">
                            <input asp-for="PostDetail.PublishOn" class="form-control" type="datetime-local" />
                            <span class="form-bar"></span>
                            <label class="float-label">@Localizer["Published on"]</label>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">
                            <i class="fa fa-check"></i> Submit
                        </button>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5>@Localizer["Format"]</h5>
                </div>
                <div class="card-block">
                    <div class="form-radio">
                        @foreach (var formatType in Enum.GetValues(typeof(PostFormat)))
                        {
                            <div class="radio radiofill">
                                <label>
                                    <input type="radio" asp-for="PostDetail.Format" value="@formatType" />
                                    <i class="helper"></i>
                                    @formatType.ToString()
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5>@Localizer["Categories"]</h5>
                </div>
                <div class="card-block">
                    <div class="material-group">
                        <div class="material-addone">
                            <i class="ti-eye"></i>
                        </div>
                        <div class="form-group form-primary form-static-label form-static-label-black">
                            <select asp-for="SelectedCategoryIDs" asp-items="Model.Categories" class="form-control"></select>
                            <span class="form-bar"></span>
                            <label class="float-label">@Localizer["Categories"]</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
